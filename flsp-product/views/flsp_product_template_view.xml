<?xml version="1.0" encoding="UTF-8"?>
 <odoo>
        <!-- Add instructor field to existing view -->
        <record model="ir.ui.view" id="product_tmpl_flsp_form_view">
            <field name="name">product.tmpl.flsp.form.inherit</field>
            <field name="model">product.template</field>
            <field name="priority">98</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
              <xpath expr="//field[@name='uom_id']" position="attributes">
                  <attribute name="attrs">{"readonly": ["|", ["bom_count",">",0],["used_in_bom_count",">",0]]}</attribute>
              </xpath>
              <xpath expr="//field[@name='uom_po_id']" position="attributes">
                  <attribute name="attrs">{"readonly": ["|", ["bom_count",">",0],["used_in_bom_count",">",0]]}</attribute>
              </xpath>
            </field>
        </record>
</odoo>
