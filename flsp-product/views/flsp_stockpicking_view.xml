<?xml version="1.0" encoding="UTF-8"?>
 <odoo>
        <!-- Add instructor field to existing view -->
        <record model="ir.ui.view" id="flsp_stockpicking_form_view">
            <field name="name">stock.picking.flsp.form.inherit</field>
            <field name="model">stock.picking</field>
            <field name="priority">97</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="flsp_allow_validate" readonly="1" />
                </xpath>
                <xpath expr="//field[@name='button_validate']" position="attributes">
                    <attribute name="attrs">{"invisible": [["flsp_allow_validate","=",False]]}</attribute>
                </xpath>
            </field>
        </record>
</odoo>
