<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--From view-->
    <record model="ir.ui.view" id="flsppayment_form_view">
        <field name="name">flsppayment.form </field>
        <field name="model">flsp.payment</field>
        <field name="arch" type="xml">
            <form string="flsppayment form">
                <sheet>
                    <group string="Payment terms">
                        <field name="flsp_payement_terms"/>
                        <field name="flsp_description"/>   <!-- widget="html"/> -->
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--Tree view-->
    <record model="ir.ui.view" id="flsppayment_tree_view">
        <field name="name">flsppayment.tree</field>
        <field name="model">flsp.payment</field>
        <field name="arch" type="xml">
            <tree string="flsppayment tree">
                <field name="flsp_payement_terms"/>
            </tree>
        </field>
    </record>

    <!--Actions-->
    <record model="ir.actions.act_window" id="flsppayment_action">
        <field name="name">FLSP Payment Terms </field>
        <field name="res_model">flsp.payment</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!--Menu-->
    <menuitem id="flsppayement_menu"
              name="Payment Terms"
              parent="purchase.menu_purchase_config"
              action="flsppayment_action"/>

</odoo>


