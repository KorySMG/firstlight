<?xml version="1.0" encoding="UTF-8"?>
 <odoo>
    <!--To make the confirmation date editable-->
    <record model="ir.ui.view" id="flsp_order_form">
        <field name="name">flsp.order.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group/field[@name='date_approve']" position="attributes">
                <attribute name="readonly">0</attribute>
            </xpath>
        </field>
    </record>
</odoo>
