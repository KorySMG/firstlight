<?xml version="1.0" encoding="UTF-8"?>
 <odoo>
        <!-- Add instructor field to existing view -->
        <record model="ir.ui.view" id="flsp_product_product_form_view">
            <field name="name">flsp.plm.product.product.form.inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button class="oe_stat_button" name="458" type="action" icon="fa-wrench" groups="mrp_plm.group_plm_user">
                        <field string="ECOs" name="eco_count" widget="statinfo"/>
                    </button>
                </xpath>
            </field>
        </record>
</odoo>
