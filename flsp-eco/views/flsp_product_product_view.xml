<?xml version="1.0" encoding="UTF-8"?>
 <odoo>
        <!-- Add instructor field to existing view -->
        <record model="ir.ui.view" id="flsp_product_product_form_view">
            <field name="name">flsp.plm.product.product.form.inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button class="oe_stat_button" name="action_flsp_view_eco" type="action" icon="fa-wrench">
                        <field string="ECOs" name="flsp_eco_count" widget="statinfo"/>
                    </button>
                </xpath>
            </field>
        </record>
</odoo>
