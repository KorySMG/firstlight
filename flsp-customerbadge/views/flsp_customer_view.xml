<?xml version="1.0" encoding="UTF-8"?>
 <odoo>
        <!-- inherit and customize "Customer" form view to add the "customer badge" if it exists -->
        <record model="ir.ui.view" id="flsp_customer_badge_form_inherit">
            <field name="name">flsp.customer.badge.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="priority">99</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header/button[@name='button_partner_acc_valid_off']" position="after">
                    <button name="button_customer_badge" groups="account.group_account_manager" string="Customer Badge" type="object" class="oe_highlight"/>
                </xpath>
                <xpath expr="//form[1]/sheet[1]/div[1]" position="after">
                    <field name="flsp_cb_id" invisible="1"/>
                    <field name="flsp_cb_image" widget='image' class="oe_avatar" attrs="{'invisible':[('flsp_cb_id', '=', False)]}"/>
                </xpath>
            </field>
        </record>
</odoo>
