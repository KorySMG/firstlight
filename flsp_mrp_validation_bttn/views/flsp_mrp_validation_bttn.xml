<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Add mrp validation button on the product template  -->
    <record id="flsp_mrp_validation_button" model="ir.ui.view">
        <field name="name">flsp.mrp.validation.bttn.inherit.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <header>
                <button name="button_mrp_valid" string="MRP Validation" class="btn-primary" type="object"
                        groups="flsp_mrp_validation_bttn.group_validation_bttn_manager"
                        attrs="{'invisible': [('flsp_mrp_bttn', '=', True)]}"/>
                <button name="button_mrp_unvalid" string="MRP UnValidate"  type="object"
                        groups="flsp_mrp_validation_bttn.group_validation_bttn_manager"
                        attrs="{'invisible': [('flsp_mrp_bttn', '=', False)]}"/>
            </header>
            <xpath expr="//page[@name='general_information']//field[@name='categ_id']" position="after">
                <field name="flsp_mrp_bttn" readonly="1"/>
            </xpath>
        </field>
    </record>

    <!--Add mrp check valid field: if it changes then the function is called to raise error-->
    <!--NOTE: HERE WE ARE REPLACING THE FUNCTION B4 IN THE BTTN WHICH WAS REPLACTING PREVIOUS ORIGINAL FUNCTION-->
    <record model="ir.ui.view" id="flsp_mrp_validation_bttn_form">
        <field name="name">flsp.mrp.validation.bttn.form</field>
        <field name="model">mrp.production</field>
        <field name="priority">100</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_confirm']" position="replace">
                  <button name="button_mrp_validation_check" id="action_confirm" string="Mark as Todo" class="oe_highlight" type="object" attrs="{'invisible': ['|', ('state', '!=', 'draft'), ('is_locked', '=', False)]}"/>
              </xpath>

            <xpath expr="//field[@name='date_planned_start']" position="after">
                <field name="check_mrp_valid" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>




