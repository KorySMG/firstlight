<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Tree view-->
	<record id="flsp_cost_detail_tree" model="ir.ui.view">
        <field name="name">flsp.cost.detail.tree</field>
        <field name="model">flsp.cost.detail</field>
        <field name="arch" type="xml">
            <tree default_order='date' string="Flsp Cost Detail" create="false" limit="999999">
                <!--Fields to display on report-->
                <field name="id"/>
                <field name="date"/>
                <field name="product_id" optional="hide"/>
                <field name="picking_type_id"/>
                <field name="reference"/>
                <field name="location_id"/>
                <field name="location_dest_id"/>
                <field name="balance"/>
                <field name="cost" />
            </tree>
        </field>
    </record>

