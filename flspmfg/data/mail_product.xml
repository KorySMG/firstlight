<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="mail_new_products_weekly">
            <div>
                <p>Hello,</p>
                <p>The following is the list of new products from the last 7 days:</p><br/>
            </div>
            <div style="background:#F0F0F0;color:#515166;padding:10px 0px;font-family:Arial,Helvetica,sans-serif;font-size:14px;">
                <table style="width:100%;margin:15px auto;background:white;border:2px solid #e1e1e1;">
                    <div>
                        <tr style="border:2px solid black; ">
                            <th> Internal Reference </th>
                            <th> Name </th>
                            <th> Created by </th>
                        </tr>
                        <div t-foreach="products" t-as="row">
                          <tr style="border:1px solid black; text-align:center">
                              <td class="pb_text_center line_left" ><span t-esc="row['default_code']"/></td>
                              <td class="pb_text_center line_left" ><a t-attf-href="https://odoo-smg-firstlight1.odoo.com/web#id={{row.id}}&amp;action=213&amp;model=product.template&amp;view_type=form&amp;cids=1&amp;menu_id=93"> <span t-esc="row['name']"/></a></td>
                              <td class="pb_text_center line_left" ><span t-esc="row.create_uid.name"/></td>
                          </tr>
                        </div>
                    </div>
                </table>
            </div><br/>
            <div style="text-align: center;">
                <a href="https://odoo-smg-firstlight1.odoo.com/web#action=213&amp;model=product.template&amp;view_type=list&amp;cids=1&amp;menu_id=93" style="background-color: #1abc9c; padding: 20px; text-decoration: none; color: #fff; border-radius: 5px; font-size: 16px;" class="o_default_snippet_text">Access Products</a>
                <br/><br/><br/>
            </div>
            <p>Thank you!</p>

        </template>
    </data>
</odoo>
