<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!--Version form view-->
    <record model="ir.ui.view" id="flsp_tkt_inherit_form">
        <field name="name">flsp.tkt.inherit.form</field>
        <field name="model">flspticketsystem.ticket</field>
        <field name="inherit_id" ref="flspticketsystem.ticket_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Version Control" attrs="{'invisible':[('status','=','open')]}">
                    <h2>To be filled before closing the Ticket</h2>
                    <group>
                        <field name="model_id"/>
                        <field name="version_type"/> <!--widget="radio"-->
                        <field name="version_num"/>
                        <field name="version_description" attrs="{'required': [('version_type','!=', 'O')]}"/>
<!--                  <field name="active"/>-->
                    </group>
              </page>
            </xpath>
        </field>
    </record>
</odoo>

