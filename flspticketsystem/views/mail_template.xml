<?xml version="1.0" ?>
<odoo>

    <!-- Mail template are declared in a NOUPDATE block
         so users can freely customize/delete them -->
    <data noupdate="1">
        <!--Email template -->
        <record id="ticket_email_template" model="mail.template">
            <field name="name">Ticket: Send by email</field>
            <field name="model_id" ref="model_flspticketsystem_ticket"/> <!--Which model this template relates to-->
            <!--error might come from not having responsible assigned: maybe have like a default email-->
            <field name="email_from">${object.responsible}</field>
<!--            <field name="email_from">iap@odoo.com</field> -->
<!--            <field name="email_to">iap@odoo.com</field> -->
<!--            <field name="email_from">${(object.survey_id.create_uid.email_formatted or user.email_formatted or user.company_id.catchall) |safe}</field>-->
<!--            <field name="email_to">${(object.partner_id.email_formatted or object.email) |safe}</field>-->
            <field name="email_to">${object.requestor}</field> <!--potential error in partner-->
            <field name="subject">Ticket Information</field>
            <field name="auto_delete" eval="False"/>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding:
                0px font-family:Arial,Helvetica,sans-serif;font-size:14px;">
                    <p>Dear ${object.name},</p><br/><br/>
                    Your ticket has been recieved and you will recieve and email upon its completion<br/>
                    Do not hesitate to contact the ERP DEVELOPER TEAM/ IT SUPPORT.
                    <br/>Best Regards,<br/><br/>
                </div>
            </field>

        </record>
    </data>
</odoo>

