<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!--TICKET FORM VIEW-->
    <record model="ir.ui.view" id="ticket_form_view">
        <field name="name">ticket.form</field>
        <field name="model">flspticketsystem.ticket</field>
        <field name="arch" type="xml">
            <form string="Ticket Form">
                <header>
                    <!--Button would be nice to close date and also sends email-->
                    <button name="button_close" string="Close" class="btn-primary"
                            type="object" status="close"/>
                    <button name="button_reopen" string="Re-open"
                            class="btn-primary" type="object"/>

                    <field name="status"  widget="statusbar" statusbar_visible="open,close"/>

                </header>
                <sheet>
                    <group string="User info">
                    <!--<field name="id"/> will generate automatically-->
                        <field name="start_date"/>
                        <field name="priority"/>
                        <field name="category_id"/>
                        <field name="short_description"/>
                        <field name="detailed_description"/>
                    </group>

                    <group string="To be filled by ERP">
                        <field name="responsible"/>
<!--                        <field name="status" />-->
                        <field name="complete_date"/>
                        <field name="analysis_solution"/>
<!--                        <field name="active"/>-->
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <!--TICKET TREE VIEW-->
    <record model="ir.ui.view" id="tickets_tree_view">
        <field name="name">ticket.tree</field>
        <field name="model">flspticketsystem.ticket</field>
        <field name="arch" type="xml">
            <tree string="Ticket Tree"  decoration-muted="status=='close'" multi_edit="1">
                <field name="id"/>
                <field name="start_date"/>
                <field name="priority"/><!--widget="color"-->
                <field name="category_id"/>
                <field name="short_description"/>
                <field name="responsible" optional="show"/>
                <field name="status"/> <!--widget="statusbar" statusbar_visible="O,C"/>-->
                <field name="complete_date" optional="show"/>
<!--                <field name="active"/>-->
            </tree>
        </field>
    </record>

    <!--TICKET CALENDAR VIEW-->
    <record model="ir.ui.view" id="ticket_calendar_view">
        <field name="name">ticket.calendar</field>
        <field name="model">flspticketsystem.ticket</field>
        <field name="arch" type="xml">
            <calendar string="Ticket Calenar" date_start="start_date" date_stop="complete_date">
                <field name="priority"/> <!--Need to specify how to view-->
                <field name="start_date"/>
                <field name="category_id"/>
            </calendar>
        </field>
    </record>

    <!--TICKET KANBAN VIEW-->
    <record model="ir.ui.view" id="view_openacademy_session_kanban">
        <field name="name">ticket.kanban</field>
        <field name="model">flspticketsystem.ticket</field>
        <field name="arch" type="xml">
            <kanban default_group_by="priority">
                <field name="color"/>
                <templates>
                     <t t-name="kanban-box">
                        <div
                                t-attf-class="oe_kanban_color_{{kanban_getcolor(record.color.raw_value)}}
                                              oe_kanban_global_click_edit oe_semantic_html_override
                                              oe_kanban_card {{record.group_fancy==1 ? 'oe_kanban_card_fancy' : ''}}">
                            <div class="oe_dropdown_kanban">
                                <!-- dropdown menu -->
                                <div class="oe_dropdown_toggle">
                                    <i class="fa fa-bars fa-lg" title="Manage" aria-label="Manage"/>
                                    <ul class="oe_dropdown_menu">
                                        <li>
                                            <a type="delete">Delete</a>
                                        </li>
                                        <li>
                                            <ul class="oe_kanban_colorpicker"
                                                data-field="color"/>
                                        </li>
                                    </ul>
                                </div>
                                <div class="oe_clear"></div>
                            </div>
                            <div t-attf-class="oe_kanban_content">
                                <!-- title -->
                                Start date:
                                <field name="start_date"/>
                                <br/>
                                Priority name:
                                <field name="priority"/>
                                <br/>

                                Category ID:
                                <field name="category_id"/>
                                <br/>
                                Responsible:
                                <field name="responsible"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <!--ACTION ITEM-->
    <record model="ir.actions.act_window" id="ticket_list_action">
        <field name="name">Tickets</field>
        <field name="res_model">flspticketsystem.ticket</field>
        <field name="view_mode">tree,form,calendar,graph,kanban</field>

    </record>

    <!--MENU ITEM-->
    <menuitem name="Ticket" id="main_ticket_menu" /> <!--Top level menu-->

    <menuitem name="Tickets" id="ticket_menu"
              parent="main_ticket_menu"
              action="ticket_list_action" />


    <!--Category form view-->
    <record model="ir.ui.view" id="category_form_view">
        <field name="name">category.form</field>
        <field name="model">flspticketsystem.category</field>
        <field name="arch" type="xml">
            <form string="Category Form">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="category_tree_view">
        <field name="name">category.tree</field>
        <field name="model">flspticketsystem.category</field>
        <field name="arch" type="xml">
            <tree string="Category Tree">
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <!--Category Action Menu-->
    <record model="ir.actions.act_window" id="category_list_action">
        <field name="name">Category</field>
        <field name="res_model">flspticketsystem.category</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create the first category
            </p>
        </field>
    </record>

    <!--Category Menu item-->
    <menuitem id="category_menu" name="Category"
              parent="main_ticket_menu"
              action="category_list_action"
              groups="flspticketsystem.group_flspticketsystem_manager"
              />
<!---->
</odoo>