<?xml version="1.0" encoding="UTF-8"?>
 <odoo>
        <record model="ir.ui.view" id="flsp_customer_form_view">
            <field name="name">res.partner.flsp.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
              <notebook position="inside">
                  <page name="sales_purchases" string="Sales &amp; Purchase">
                      <group name="container_row_2">
                          <group string="Sales" name="sale" priority="1">
                              <field name="flsp_user_id"/>
                          </group>
                      </group>
                  </page>
              </notebook>
            </field>
        </record>

        <record model="ir.actions.act_window" id="customer_list_action">
            <field name="name">Customer</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">tree,form</field>
        </record>

</odoo>
